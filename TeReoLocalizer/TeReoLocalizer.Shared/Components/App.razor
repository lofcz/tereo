@code {
    
    private static string GetBlazorScript()
    {
        if (SharedProxy.IsMaui)
        {
            return "_framework/blazor.webview.js";
        }
        
        return "_framework/blazor.web.js";
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Te Reo</title>
    <base href="/"/>
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css"/>
    <link rel="stylesheet" href="app.css"/>
    <link rel="stylesheet" href="TeReoLocalizer.Shared.styles.css"/>
    <link rel="icon" type="image/png" href="favicon.svg"/>
    <HeadOutlet/>
</head>

<body data-bs-theme="dark" >
    <Routes @rendermode="@(new InteractiveServerRenderMode(false))" />
    <script src="@GetBlazorScript()"></script>
</body>

</html>